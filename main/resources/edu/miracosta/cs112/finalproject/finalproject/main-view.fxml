            mnemonicParsing="false" onAction="#noButtonAction"
            prefHeight="68.0" prefWidth="230.0" style="-fx-background-color: #f7e9d2; -fx-font-weight: bold; -fx-font-family: Constantia; -fx-font-size: 20; -fx-text-alignment: CENTER; -fx-effect: dropshadow( one-pass-box , black , 8 , 0.0 , 2 , 0 );  "/>
    <Label fx:id="beeInfoLeft" alignment="TOP_LEFT"
           layoutX="380.0" layoutY="14.0"
           prefHeight="68.0" prefWidth="230.0"
           text="Bee Details"
           style="-fx-font-weight: bold; -fx-font-family: Constantia; -fx-font-size: 10; -fx-text-alignment: LEFT;"/>
    <Label fx:id="beeInfoRight" alignment="TOP_LEFT"
           layoutX="380.0" layoutY="70.0" prefHeight="150.0" prefWidth="230.0"
           text="Bee Stats"
           style="-fx-font-weight: bold; -fx-font-family: Constantia; -fx-font-size: 10; -fx-text-alignment: LEFT;"/>
</Pane>
